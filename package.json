{
  "name": "buyernepal-worker",
  "description": "Cloudflare Worker backend for BuyerNepal affiliate platform.",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "cf-typegen": "wrangler types",
    "build:dev": "wrangler deploy --dry-run --outdir=dist",
    "migrate:dev": "wrangler d1 migrations apply DB --local",
    "migrate:prod": "wrangler d1 migrations apply DB --remote"
  },
  "dependencies": {
    "hono": "^4.x",
